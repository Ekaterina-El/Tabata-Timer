<?xml version="1.0" encoding="utf-8"?>
<resources>

  <style name="text" parent="android:Widget.TextView">
    <item name="android:textColor">@color/on_primary</item>
    <item name="android:layout_width">match_parent</item>
    <item name="android:textSize">14sp</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:fontFamily">@font/montserrat_regular</item>
  </style>

  <style name="text.h1" parent="text">
    <item name="android:textSize">25sp</item>
  </style>

  <style name="title" parent="text.h1">
    <item name="android:fontFamily">@font/rajdhani_bold</item>
    <item name="android:textColor">@color/accent</item>
  </style>

  <style name="text.h2" parent="text">
    <item name="android:textSize">18sp</item>
  </style>

  <style name="text.settings.title" parent="text.h2">
    <item name="android:gravity">center</item>
  </style>

  <style name="text.settings.value" parent="text">
    <item name="android:gravity">center</item>
    <item name="android:textSize">20sp</item>
    <item name="android:layout_width">100dp</item>
    <item name="android:layout_height">wrap_content</item>
  </style>

  <style name="triangle">
    <item name="android:clickable">true</item>
    <item name="android:focusable">true</item>
    <item name="android:layout_width">30dp</item>
    <item name="android:layout_height">30dp</item>
    <item name="android:tint">@color/accent</item>
    <item name="android:contentDescription">@null</item>
  </style>

  <style name="triangle.left" parent="triangle">
    <item name="android:src">@drawable/left_triangle_selector</item>
  </style>

  <style name="triangle.right" parent="triangle">
<!--    <item name="android:drawable">@drawable/left_triangle_selector</item>-->
  </style>

  <style name="text.h2.bold" parent="text.h2">
    <item name="android:textStyle">bold</item>
  </style>

  <style name="text.h3" parent="text">
    <item name="android:textSize">16sp</item>
  </style>

  <style name="text.hint" parent="text">
    <item name="android:textColor">@color/hint_color</item>
  </style>

  <style name="text.hint.small" parent="text.hint">
    <item name="android:textSize">12sp</item>
  </style>

  <style name="text.bold" parent="text">
    <item name="android:textSize">13sp</item>
    <item name="android:textStyle">bold</item>
    <item name="android:fontFamily">@font/montserrat_medium</item>
  </style>

  <style name="text.bold.button" parent="text.bold">
    <item name="android:textColor">@color/accent</item>
    <item name="android:paddingHorizontal">10dp</item>
    <item name="android:paddingVertical">5dp</item>
  </style>

  <style name="button" parent="TextAppearance.AppCompat.Button">
    <item name="android:backgroundTint">@color/accent</item>
    <item name="android:textColor">@color/white</item>
    <item name="android:fontFamily">@font/montserrat_medium</item>
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:textAllCaps">false</item>
  </style>
</resources>